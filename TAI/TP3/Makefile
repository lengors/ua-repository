# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  main_config = debug
  NCD_config = debug
  resize_config = debug
  test_config = debug
  NCCD_config = debug

else ifeq ($(config),release)
  main_config = release
  NCD_config = release
  resize_config = release
  test_config = release
  NCCD_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := main NCD resize test NCCD

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

main: NCCD NCD
ifneq (,$(main_config))
	@echo "==== Building main ($(main_config)) ===="
	@${MAKE} --no-print-directory -C config/main -f Makefile config=$(main_config)
endif

NCD:
ifneq (,$(NCD_config))
	@echo "==== Building NCD ($(NCD_config)) ===="
	@${MAKE} --no-print-directory -C . -f NCD.make config=$(NCD_config)
endif

resize:
ifneq (,$(resize_config))
	@echo "==== Building resize ($(resize_config)) ===="
	@${MAKE} --no-print-directory -C . -f resize.make config=$(resize_config)
endif

test: NCCD NCD
ifneq (,$(test_config))
	@echo "==== Building test ($(test_config)) ===="
	@${MAKE} --no-print-directory -C config/test -f Makefile config=$(test_config)
endif

NCCD:
ifneq (,$(NCCD_config))
	@echo "==== Building NCCD ($(NCCD_config)) ===="
	@${MAKE} --no-print-directory -C . -f NCCD.make config=$(NCCD_config)
endif

clean:
	@${MAKE} --no-print-directory -C config/main -f Makefile clean
	@${MAKE} --no-print-directory -C . -f NCD.make clean
	@${MAKE} --no-print-directory -C . -f resize.make clean
	@${MAKE} --no-print-directory -C config/test -f Makefile clean
	@${MAKE} --no-print-directory -C . -f NCCD.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   main"
	@echo "   NCD"
	@echo "   resize"
	@echo "   test"
	@echo "   NCCD"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"